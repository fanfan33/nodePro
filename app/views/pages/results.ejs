<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8">
	<title>
		<%= title%>
	</title>
	<% include ../includes/head.ejs %>
</head>

<body>
	<% include ../includes/header.ejs %>
	<div class="container">
		<div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                     <%= keyWord %> 
                </div>
                <div class="panel-body">
                   
                    <% if(movieToshow && movieToshow.length>0) { %>
                        <% movieToshow.forEach(function(cat){ %>
                            <div class="col-md-2 col-sm-2 col-xs-2">
                                <figure class="thumbnail" id="<%= cat._id %>">
                                    <img src="<%= cat.poster %>" alt="<%= cat.title %>">
                                    <figcaption>
                                        <p><%= cat.title %></p>
                                        <a role="button" class="btn btn-primary" href="/movie/<%= cat._id %>">点击观看</a>
                                    </figcaption>
                                </figure>
                            </div>
                        <% }) %>
                    <% }else{ %>
                        <p>暂无数据</p>
                    <% } %>
                </div>
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li>
                        <a href="/results?<%= query %>&page=<%= currentPage-1 %>" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                        </li>

                        <% for(var i=0;i< countPage;i++){ %>
                            <% if(currentPage == i){ %>
                                <li class="active"><span><%= currentPage+1 %></span></li>
                            <% }else{ %>
                                <li><a href="/results?<%= query %>&page=<%= i %>"> <%= i+1 %> </a></li>
                            <% } %>
                        <% } %>

                        <li>
                        <a href="/results?<%= query %>&page=<%= currentPage+1 %>" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                        </li>
                    </ul>
                    </nav>
            </div>
		</div>
	</div>
</body>

</html>