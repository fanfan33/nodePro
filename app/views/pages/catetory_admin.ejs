<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8">
	<title>
		<%= title%>
	</title>
	<% include ../includes/head.ejs %>
</head>

<body>
	<% include ../includes/header.ejs %>
	<div class="container">
		<div class="row">
			<form class="form-horizontal" method="post" action="/admin/catetory">
				<!-- <input type="hidden" name="catetory[_id]" value="<%=catetory._id %>"> -->
				<div class="form-group">
					<label for="inputCatetory" class="col-sm-2 control-label">电影分类</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" id="inputCatetory" placeholder="inputCatetory" name="catetory[name]" value="<%= catetory.name %>">
					</div>
				</div>
				
				<div class="checkbox">
					<label><input type="checkbox"> Check me out</label>
				</div>
				<button id="submit" type="submit" disabled="true" class="btn btn-default">Submit</button>
			</form>
		</div>
	</div>
	<script>
		$("input[type=checkbox]").click(function(){
			if ($(this).is(':checked')) {
				$('#submit').addClass('btn-success').attr('disabled',false);
			} else {
				$('#submit').removeClass('btn-success').attr('disabled',true);
			}
		})
	</script>
</body>

</html>